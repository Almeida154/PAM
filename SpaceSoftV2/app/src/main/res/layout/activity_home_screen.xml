<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen"
    android:orientation="vertical"
    android:background="@drawable/home2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hellouser"
        android:text="Hi, Avenida"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:textColor="@color/inputs">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:text="Welcome again"
        android:layout_marginLeft="32dp"
        android:textSize="17sp"
        android:textColor="@color/inputs"
        android:layout_marginBottom="40dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DASHBOARD"
        android:textColor="#27325f"
        android:textSize="25sp"
        android:id="@+id/dashboard"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/cell"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp">
        </ImageView>
        <TextView
            android:id="@+id/section1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="My Apps"
            android:textColor="#27325f"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/desktop"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp">
        </ImageView>
        <TextView
            android:id="@+id/section2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="My Websites"
            android:textColor="#27325f"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/design"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp">>
        </ImageView>
        <TextView
            android:id="@+id/section3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="My Designs"
            android:textColor="#27325f"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="#27325f"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:text="Buy a new Software"
        android:textStyle="italic"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp">
    </Button>

    <TextView
        android:id="@+id/saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Your Balance"
        android:textColor="#27325f"
        android:textSize="25sp"
        android:layout_marginTop="165dp">
    </TextView>

    <TextView
        android:id="@+id/grana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="R$xxxx"
        android:textStyle="bold"
        android:textColor="#36FF00"
        android:textSize="35sp">
    </TextView>

</LinearLayout>