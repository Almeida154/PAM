<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegScreen"
    android:orientation="vertical"
    android:background="@drawable/reg">

    <TextView
        android:text="REGISTER"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:textSize="30sp"
        android:textColor="@color/inputs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/txvRegRegister">
    </TextView>


    <EditText
        android:hint="Your username"
        android:id="@+id/edtRegUser"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="#261d3f"
        android:backgroundTint="#261d3f"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:textColor="#fff"
        android:textColorHint="@color/inputs"
        android:maxLength="15">
    </EditText>

    <EditText
        android:hint="Your password"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#261d3f"
        android:backgroundTint="#261d3f"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:textColor="#fff"
        android:textColorHint="@color/inputs"
        android:id="@+id/edtRegPassword"
        android:inputType="textPassword"
        android:maxLength="15">
    </EditText>

    <EditText
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#261d3f"
        android:backgroundTint="#261d3f"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:textColor="#fff"
        android:textColorHint="@color/inputs"
        android:hint="Confirm password"
        android:id="@+id/edtRegPasswordAgain"
        android:inputType="textPassword"
        android:maxLength="15">
    </EditText>

    <EditText
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#261d3f"
        android:backgroundTint="#261d3f"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:textColor="#fff"
        android:textColorHint="@color/inputs"
        android:hint="Opening balance (R$)"
        android:inputType="number"
        android:id="@+id/edtBalance"
        android:maxLength="4">
    </EditText>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:background="#f70077"
        android:layout_gravity="center"
        android:paddingRight="81dp"
        android:paddingLeft="81dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textColorHint="@color/inputs"
            android:background="@android:color/transparent"
            android:text="Create"
            android:textStyle="italic"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:onClick="reg">
        </Button>
    </LinearLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Back"
        android:id="@+id/volts"
        android:layout_marginTop="40dp"
        android:textColor="@color/inputs"
        android:onClick="backToHome">
    </TextView>

</LinearLayout>