<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToPayActivity"
    android:background="@drawable/topayscreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/normal"
                    android:text="@string/toPay_title"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_marginTop="-8dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/person"
                    android:onClick="ibProfileToPay">
                </ImageButton>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toPay_desc"
                android:fontFamily="@font/bold"
                android:textColor="@color/white"
                android:textSize="30sp">
            </TextView>

            <TextView
                android:id="@+id/txvCurrentBalanceToPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 30.000,00"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/white"
                android:textSize="55sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:background="@drawable/bgwhite"
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:onClick="linearTransfer">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_transfer"/>

                    <TextView
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="@color/green"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/toPay_transfer">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bgwhite"
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:onClick="linearInvoice">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_invoice"/>

                    <TextView
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="@color/green"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/toPay_invoice">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bgwhite"
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:onClick="linearTopUp">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_topup"/>

                    <TextView
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="@color/green"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/toPay_topUp">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:background="@drawable/bgwhite"
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:onClick="linearBill">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_bill"/>

                    <TextView
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="@color/green"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/toPay_bill">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bgwhite"
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:onClick="linearQr">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_qr"/>

                    <TextView
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="@color/green"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/toPay_qr">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bgwhite"
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:onClick="linearFriend">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_friend"/>

                    <TextView
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="@color/green"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/toPay_friend">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:background="@drawable/bgbottomnavigation"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:itemBackground="@color/green"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>