<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteRegistersActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/deletescreen">

    <TextView
        android:id="@+id/txvTitleDelete"
        android:visibility="invisible"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/grandehotel"
        android:textColor="@color/grey"
        android:textSize="40dp"
        android:text="@string/deleteRegistersScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_marginTop="30dp"
        android:id="@+id/flListViewDelete"
        android:layout_width="300dp"
        android:layout_height="400dp"/>

    <TextView
        android:layout_marginTop="160dp"
        android:fontFamily="@font/grandehotel"
        android:textColor="@color/pink"
        android:textSize="30sp"
        android:onClick="txvBack"
        android:text="@string/registersScreenExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>