<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exer1164Activity"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="URI - 1164"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="23dp">
        </TextView>

        <ImageView
            android:id="@+id/imgVgo1012"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/home"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50px"
            android:onClick="goHome"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#220c42"
            android:layout_marginTop="50dp"
            android:paddingRight="8dp"
            android:paddingBottom="50dp">

            //1 LINHA
            <TableRow
                android:layout_gravity="center"
                android:layout_height="1px"
                android:background="#220c42"
                android:paddingRight="15px"
                android:paddingLeft="15px"
                android:paddingTop="5dp"
                android:paddingBottom="25dp">
                <TextView
                    android:layout_gravity="center"
                    android:text="Insira um nÃºmero:"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:padding="10dp"
                    android:gravity="center"
                    android:id="@+id/txtP">
                </TextView>

                <EditText
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Digite"
                    android:textSize="25sp"
                    android:textColorHint="@color/hintoso"
                    android:backgroundTint="@color/inputs"
                    android:layout_marginLeft="30px"
                    android:inputType="number"
                    android:id="@+id/nperfect">
                </EditText>
            </TableRow>
            <TableRow
                android:layout_gravity="center"
                android:layout_height="1px"
                android:background="#220c42">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calcular"
                    android:layout_gravity="center"
                    android:layout_marginLeft="52dp"
                    android:onClick="calcperfect">
                </Button>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#220c42"
            android:layout_marginTop="10dp"
            android:paddingRight="8dp"
            android:paddingBottom="12dp">

            //1 LINHA
            <TableRow
                android:layout_gravity="center"
                android:layout_height="1px"
                android:background="#361762"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_gravity="center"
                    android:text="Resultado:"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:padding="10dp"
                    android:gravity="center"
                    android:id="@+id/result">
                </TextView>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>