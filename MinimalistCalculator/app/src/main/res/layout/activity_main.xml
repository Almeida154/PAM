<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/mainBackground">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <fragment
            android:id="@+id/fragRecentVariables"
            android:layout_marginRight="7dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="200dp"
            class="com.example.minimalistcalculator.RecentScreen">
        </fragment>

        <fragment
            android:id="@+id/fragResultScreen"
            android:layout_marginLeft="7dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="200dp"
            class="com.example.minimalistcalculator.ResultScreen">
        </fragment>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:backgroundTint="@color/btnGrey"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="C"
                android:textSize="35sp"
                android:onClick="btnClean">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btn7">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btn4">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btn1">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btn0">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textAllCaps="false">

            <Button
                android:backgroundTint="@color/btnGrey"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="xʸ"
                android:textSize="35sp"
                android:onClick="btnElevated">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btn8">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btn5">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btn2">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="π"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btnPi">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:backgroundTint="@color/btnGrey"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="÷"
                android:textSize="40sp"
                android:onClick="btnDivision">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btn9">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btn6">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btn3">
            </Button>

            <Button
                android:backgroundTint="@color/btnBlack"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="e"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:onClick="btnEuler">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:backgroundTint="@color/btnGrey"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="x"
                android:textSize="35sp"
                android:onClick="btnMultiplication">
            </Button>

            <Button
                android:backgroundTint="@color/btnGrey"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="-"
                android:textSize="50sp"
                android:onClick="btnSubtraction">
            </Button>

            <Button
                android:backgroundTint="@color/btnGrey"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="+"
                android:textSize="40sp"
                android:onClick="btnAddition">
            </Button>

            <Button
                android:backgroundTint="@color/btnDifferent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.05"
                android:text="="
                android:textSize="40sp"
                android:onClick="btnEqual">
            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>